@model SharedWorkplace.Models.RegisterModel
@{
    Layout = null;
}
<environment>
    <link href="~/css/LoginAndAutor.css" rel="stylesheet" />
</environment>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1 class="headText">Регистрация</h1>
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="mainDiv">
            <div class="UnderDiv">
                <label asp-for="Email">Введите Login</label><br />
                <input class="inputFields" type="text" asp-for="Email" />
            </div>
            @Html.ValidationMessageFor(model => model.Email, null, new { @class = "WarningMessage" })
            <div class="UnderDiv">
                <label asp-for="Name">Введите Имя</label><br />
                <input class="inputFields" type="text" asp-for="Name" />
            </div>
            @Html.ValidationMessageFor(model => model.Name, null, new { @class = "WarningMessage" })
            <div class="UnderDiv">
                <label asp-for="Password">Введите пароль</label><br />
                <input class="inputFields" asp-for="Password" />
            </div>
            @Html.ValidationMessageFor(model => model.Password, null, new { @class = "WarningMessage" })
            <div class="UnderDiv">
                <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                <input class="inputFields" asp-for="ConfirmPassword" />
            </div>
            @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "WarningMessage" })
            <div class="UnderDiv">
                <input type="submit" class="regist" value="Зарегистрироваться" />
                <a style="margin-left:40px" asp-action="Login" asp-controller="Account">Войти</a>
            </div>
        </div>
    </form>
</body>
</html> 