@model SharedWorkplace.Models.LoginModel
@{
    Layout = null;
}
<environment>
    <link href="~/css/LoginAndAutor.css" rel="stylesheet" />
</environment>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body style="background-image: url(~/foto/office.jpg);width:100%;height:100%">
    <div>
        <div style="background-image: url(~/foto/office.jpg)">
            <h2 class="headText">Авторизация</h2>
        </div>
        <div class="mainDiv">
            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <div class="form-group">
                        <label asp-for="Email">Введите Email</label>
                        <input class="inputFields" type="text" asp-for="Email" />
                        <span asp-validation-for="Email" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Введите пароль</label>
                        <input class="inputFields" asp-for="Password" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Войти" class="enterButton" />
                        <a style="margin-left:40px" asp-action="Register" asp-controller="Account">Регистрация</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
