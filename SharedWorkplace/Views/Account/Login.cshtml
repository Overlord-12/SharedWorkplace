@model SharedWorkplace.Models.LoginModel
@{
    Layout = null;
}
<environment>
    <link href="~/css/LoginAndAutor.css" rel="stylesheet" />
</environment>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body style="background-image: url(~/foto/office.jpg);width:100%;height:100%">
    <div>
        <div style="background-image: url(~/foto/office.jpg)">
            <h2 class="headText">Авторизация</h2>
        </div>
        <div class="mainDiv">
            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <label asp-for="Email"> Login</label>
                    <div class="UnderDiv">
                        <input class="inputFields" type="text" asp-for="Email" />
                    </div>
                    <div>
                        @Html.ValidationMessageFor(model => model.Email, null, new { @class = "WarningMessage" })
                    </div>
                    <label asp-for="Password">Password</label>
                    <div class="UnderDiv">
                        <input class="inputFields" asp-for="Password" />
                    </div>
                    @Html.ValidationMessageFor(model => model.Password, null, new { @class = "WarningMessage" })
                <div class="form-group UnderDiv">
                    <input type="submit" value="Log In" class="enterButton" />
                    <a asp-action="Register" asp-controller="Account">
                        <input type="button" class="regist" value="Create new Account" />
                    </a>
                </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
