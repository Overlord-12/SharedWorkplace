@model SharedWorkplace.Models.Desk

@{
    ViewData["Title"] = "EditDesk";
}

<h1>EditDesk</h1>

<h4>Desk</h4>
<hr />
<div class="row" style="position:relative;width:100%;height:500px;">
    <div class="" style="margin:0 auto;">
        <div style="float:left;">
            <form asp-action="EditName" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="DeskName" class="control-label"></label>
                    <input asp-for="DeskName" class="form-control" />
                    <span asp-validation-for="DeskName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <form asp-action="AddDeviceInDesk" method="post">
                <input type="hidden" asp-for="Id" />
                @if (ViewBag.Devices.Length != 0)
                {
                    <div>

                        <select id="device" name="device" style="width:200px">
                            @foreach (var item in ViewBag.Devices)
                            {
                                <option value="@item.Id">@item.DeviceName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group" style="margin-top:10px">
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </div>
                }

            </form>
        </div>
       
        <div style="display:inline-block; float:right;">
            @foreach (var item in Model.Devices)
            {
                <ol style="list-style-type:none">
                    <li style="list-style:unset">
                        @item.DeviceName
                        <a asp-action="DelDeviceinDesk" asp-route-id="@Model.Id" asp-route-id2="@item.Id">delete</a>
                    </li>
                </ol>
            }
        </div>
