@model SharedWorkplace.Models.Desk

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<style>
    textarea {
        overflow: auto;
        resize: none;
        width: 300px;
        height: 50px;
        background: #f6f6f6;
        border: 1px solid #cecece;
        border-radius: 8px 0 0 0;
        padding: 8px 0 8px 10px;
    }
</style>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DeskName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Devices)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.DeskName)
                </td>
                <td>
                    @foreach (var dev in Model.Devices)
                    {
                        <pr>@dev.DeviceName</pr>
                    }
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="UserDesk">Back to List</a>
</div>
